@model MVC.Models.OfferUserAddModel

@{
    ViewData["Title"] = "Dodawanie oferty";
}
<section class="section-padding">
    <div class="container col-4 mt-5 mb-5 border rounded bg-light p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="section-header text-center pb-5">
                    <br><h2>Dodawanie oferty</h2>
                </div>
            </div>
        </div>
        <div class="text-center">
            @using (Html.BeginForm("AddOffer", "Offeruser"))
            {
                <table class="mx-auto">
                    <tbody>
                        <tr>
                            <td>
                                <label>Id użytkownika </label><br />
                                @Html.TextBoxFor(o => o.UserId, new { @type = "number" })<br />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Id usługi </label><br />
                                @Html.TextBoxFor(o => o.ProductId, new { @type = "number" })<br />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Cena (zł)</label><br />
                                @Html.TextBoxFor(o => o.Price, new { @type = "number" })<br />
                            </td>
                        </tr>
                    </tbody>
                </table>

                <br />
                <input type="submit" value="Dodaj" class="btn btn-dark" />
                <br />
                <br />
            }
        </div>
        @if (ViewData["Message"] != null)
        {
            <div class="text-center">
                <p class="text-danger col-12">@ViewData["Message"]</p>
            </div>
        }
    </div>
</section>

